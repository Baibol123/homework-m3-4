<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="30dp"
    android:gravity="start"


    android:background="@color/gray"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        tool:layout_constraintTop_toTopOf="parent"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintEnd_toEndOf="parent"
        tool:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/test"
        android:id="@+id/continent_image"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_height="150dp"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/continent_name"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        tools:textColor="@color/white"
        tools:text="Название континента"
        tool:layout_constraintTop_toBottomOf="@id/continent_image"
        tool:layout_constraintStart_toStartOf="@id/continent_image"
        tool:layout_constraintEnd_toEndOf="@id/continent_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayligh"
        tools:layout_constraintBottom_toBottomOf="parent"
        android:importantForAccessibility="no" />
</androidx.constraintlayout.widget.ConstraintLayout>